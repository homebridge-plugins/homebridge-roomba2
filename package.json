{
  "name": "@homebridge-plugins/homebridge-roomba",
  "displayName": "Roomba",
  "type": "module",
  "version": "2.0.0",
  "description": "homebridge-plugin for Roomba devices",
  "author": {
    "name": "RayanKhan"
  },
  "license": "MIT",
  "homepage": "https://github.com/homebridge-plugins/homebridge-roomba#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/homebridge-plugins/homebridge-roomba.git"
  },
  "bugs": {
    "url": "https://github.com/homebridge-plugins/homebridge-roomba/issues"
  },
  "keywords": [
    "homebridge-plugin",
    "iRobot",
    "Roomba"
  ],
  "main": "./dist/index.js",
  "engines": {
    "homebridge": "^1.8.5 || ^2.0.0 || ^2.0.0-beta.23 || ^2.0.0-alpha.37",
    "node": "^20 || ^22"
  },
  "maintainers": [
    {
      "name": "karlvr"
    }
  ],
  "scripts": {
    "check": "npm install && npm outdated",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "watch": "npm run build && npm run plugin-ui && npm link && nodemon",
    "plugin-ui": "rsync ./src/homebridge-ui/public/index.html ./dist/homebridge-ui/public/",
    "build": "npm run clean && tsc && npm run plugin-ui",
    "prepublishOnly": "npm run lint && npm run build && npm run plugin-ui && npm run docs && npm run docs:lint && npm run docs:theme",
    "postpublish": "npm run clean && npm ci",
    "clean": "shx rm -rf ./dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test-coverage": "npm run test -- --coverage",
    "roomba:getpassword": "get-roomba-password",
    "roomba:getlastcommand": "node ./dist/lastcommand.js",
    "docs": "typedoc",
    "docs:lint": "typedoc --emit none --treatWarningsAsErrors",
    "docs:theme": "typedoc --theme default-modern"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^2.0.1",
    "dorita980": "npm:@karlvr/dorita980@3.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.0",
    "@changesets/cli": "^2.27.12",
    "@types/aes-js": "^3.1.4",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.13.0",
    "@types/promise-timeout": "^1.3.0",
    "@types/semver": "^7.5.8",
    "@types/source-map-support": "^0.5.10",
    "@typhonjs-typedoc/typedoc-theme-dmt": "^0.3.1",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.0.1",
    "homebridge": "^1.8.5",
    "homebridge-config-ui-x": "4.69.0",
    "nodemon": "^3.1.9",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}